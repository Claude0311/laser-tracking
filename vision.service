[Unit]
Description=PosMeas service

[Service]
Type=simple
Environment="DISPLAY=:0.0"
User=pi
ExecStart=/usr/bin/python3 /home/pi/MagmanRaspberry/raspi-ballpos/vision.py -pl -c config_multi.json
WorkingDirectory=/home/pi/MagmanRaspberry/raspi-ballpos
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=vision

[Install]
WantedBy=multi-user.target
